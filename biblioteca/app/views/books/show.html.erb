<h1> <%= @book.title %></h1>

<p>Autor: <%= @book.author.name %> </p>
<p>Ano de Publicação: <%= @book.publication_year %> </p>
<p>Resumo: <%= @book.resume %> </p>
<p>Total de Paginas: <%= @book.total_pages %> </p>
<p>Imagem da Capa: <%= image_tag @book.cover.url(:thumb) %> </p>

<div class="form-group">
  <div class="col-sm-12">
    <%= link_to "Voltar", books_path, class: "btn btn-default" %>
    <%= link_to "Editar", edit_book_path(@book.id), class: 'btn btn-primary' %>
    <%= link_to "Remover", book_path(@book.id), class: 'btn btn btn-danger', method: :delete, data: {confirm: "Voce realmente deseja apagar este Livro?"} %>
  </div>
</div>
